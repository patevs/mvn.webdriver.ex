<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Console Appender -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{"HH:mm:ss.SSS"} %-5level   %-130message   %c{0}:%line %n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="console" />
    </root>

</configuration>